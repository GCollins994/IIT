#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Button kivy.uix.button.Button

#kivy.require("1.10.0")

ScreenManagement:
    transition: FadeTransition()
    LoginP:
    MainMenu:
    Edit:
    PayRoll:
    EmployeeCheck:
    AddPage:

<TestWidget@GridLayout>:
    pos: 100, 100
    size: 100, 100
    cols: 3
    rows: 3
    on_parent:
        if not self.children: [self.add_widget(Button(text=str(i))) for i in range(1, 10)]


<LoginP>:
    name: "log"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.2, 0.4
        pos_hint: {"x": 0.37, "y": 0.43}
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'logo.png'


    BoxLayout:
        id: login_layout
        orientation: 'vertical'

        padding: [10]
        spacing: 10
        size_hint: 0.3, 0.2
        pos_hint: {'x': .33 ,'y': .2}
        TextInput:
            id: login
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
            hint_text: "Username"
            font_size: 28


        TextInput:
            id: password
            password:True
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
            hint_text: "Password"
            font_size: 28

        Button:
            on_release: root.check_attempt()
            text: "Login"
            font_name: 'Arial'
            font_size: 28




<MainMenu>:
    name: "main"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    AnchorLayout:
        padding: 50, 50, 50, 50
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            padding: 50, 50, 50, 50
            orientation: "horizontal"
            spacing: 50
            canvas:
                Color:
                    rgba: .85, .87, .87, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


            BoxLayout:
                orientation: "vertical"
                padding: 0, 0, 0, 0

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: .08

                    Button:
                        size_hint: .2, 1
                        font_size: 26
                        text: "Logout"
                        on_release: app.root.current = "log"
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        color: 0, 0, 0, 1

                    Button:
                        font_size: 26
                        text: "Edit"
                        disabled: True
                        background_normal: ''
                        background_color: .85, .87, .87, 0
                        color: .85, .87, .87, 0

                    Label:
                        size_hint: .2, 1
                        font_size: 26
                        text: "Search:"
                        color: 0, 0, 0, 1

                    TextInput:
                        size_hint_x: .5
                        background_normal: ''
                        background_color: (1,1,1,1)
                        border: 0, 0, 0, 0
                        id: search
                        write_tab: False
                        multiline: False
                        on_text_validate: root.foo()
                        font_size: 26

                Button:
                    size_hint: 1, 0.05
                    font_size: 26
                    text: "Edit"
                    disabled: True
                    background_normal: ''
                    background_color: .85, .87, .87, 0
                    color: .85, .87, .87, 0

                GridLayout:
                    size_hint: 1, None
                    height: 55
                    cols: 3


                    Label:
                        text: "ID"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: "Last Name"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: "First Name"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                ScrollView:
                    BoxLayout:
                        orientation: "vertical"
                        RecycleView:
                            viewclass: 'SelectableButton'
                            data: [{'text': str(x)} for x in root.data_items]
                            SelectableRecycleGridLayout:
                                cols: 3
                                default_size: None, 95
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
                                multiselect: True
                                touch_multiselect: True


            BoxLayout:
                orientation: "vertical"
                size_hint: 0.25, 1
                spacing: 30


                Button:
                    size_hint_y: .2
                    font_size: 26
                    text: "Add Employee"
                    on_release: app.root.current = "addpage"
                    disabled: False
                    background_normal: ''
                    background_color: 1, 1, 1, 1
                    color: 0, 0, 0, 1

                Button:
                    id: 'edit_id'
                    font_size: 26
                    text: "just space"
                    disabled: True
                    background_normal: ''
                    background_color: .85, .87, .87, 0
                    color: .85, .87, .87, 0

                Button:
                    id: 'edit_id'
                    size_hint_y: .2
                    font_size: 26
                    text: "Edit"
                    on_release: app.root.current = "edit"

                    disabled: True
                    background_normal: ''
                    background_color: 78, 79, 79, 1
                    color: 0, 0, 0, 1

                Button:
                    id: 'remove_id'
                    size_hint_y: .2
                    font_size: 26
                    text: "Remove"
                    on_release: app.root.current = "addpage"

                    disabled: True
                    background_normal: ''
                    background_color: 78, 79, 79, 1
                    color: 0, 0, 0, 1

                Button:
                    id: 'payrol_id'
                    size_hint_y: .2
                    font_size: 26
                    text: "Pay Roll"
                    on_release: app.root.current = "payroll"

                    disabled: True
                    background_normal: ''
                    background_color: 78, 79, 79, 1
                    color: 0, 0, 0, 1






